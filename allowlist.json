{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Domain Allowlist Configuration",
  "description": "Whitelist of external domains allowed for the Masternode Council application",
  "version": "1.0.0",
  "allowedDomains": {
    "google": {
      "description": "Google authentication and Chromium components",
      "domains": [
        "accounts.google.com",
        "android.clients.google.com",
        "clients2.google.com",
        "www.google.com"
      ],
      "purpose": "Google OAuth authentication and Chromium browser functionality"
    },
    "googleCdn": {
      "description": "Google Content Delivery Networks",
      "domains": [
        "redirector.gvt1.com"
      ],
      "purpose": "Chrome binary CDN for browser updates and downloads"
    },
    "fonts": {
      "description": "Google Fonts API",
      "domains": [
        "fonts.googleapis.com",
        "fonts.gstatic.com"
      ],
      "purpose": "Font resources (Inter font family)"
    },
    "playwright": {
      "description": "Playwright browser testing CDN",
      "domains": [
        "playwright.azureedge.net"
      ],
      "purpose": "Playwright official browser CDN for automated testing",
      "optional": true
    }
  },
  "flatList": [
    "accounts.google.com",
    "android.clients.google.com",
    "clients2.google.com",
    "www.google.com",
    "redirector.gvt1.com",
    "fonts.googleapis.com",
    "fonts.gstatic.com",
    "playwright.azureedge.net"
  ],
  "cspDirectives": {
    "connect-src": [
      "'self'",
      "https://accounts.google.com",
      "https://android.clients.google.com",
      "https://clients2.google.com",
      "https://www.google.com"
    ],
    "font-src": [
      "'self'",
      "https://fonts.googleapis.com",
      "https://fonts.gstatic.com"
    ],
    "script-src": [
      "'self'",
      "'unsafe-inline'",
      "https://accounts.google.com"
    ],
    "style-src": [
      "'self'",
      "'unsafe-inline'",
      "https://fonts.googleapis.com"
    ],
    "img-src": [
      "'self'",
      "data:",
      "https:"
    ]
  }
}
